---
import '../styles/global.css';
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const images = [
  '/images/foto.jpg',
  '/images/foto1.jpg',
  '/images/foto2.jpg',
  '/images/foto3.jpg',
  '/images/foto4.jpg',
  '/images/foto5.jpg'
];
---

<html lang="es" class="dark:bg-slate-900 dark:text-slate-100">
  <BaseHead title="Galería — Mi Blog" description="Fotos y recuerdos" />

  <body class="min-h-screen flex flex-col bg-slate-50 text-slate-800 dark:bg-slate-900 dark:text-slate-100">

    <Header current="galeria" />

    <main class="container-custom py-12 flex-1">

      <h2 class="text-2xl font-bold mb-6 dark:text-white">Galería</h2>

      <div class="grid sm:grid-cols-2 md:grid-cols-3 gap-4">
        {images.map((src) => (
          <figure class="bg-white rounded-lg p-2 shadow-sm dark:bg-slate-800 dark:shadow-lg">
            <img src={src} alt="galería" class="site-img object-cover h-48 w-full" />
          </figure>
        ))}
      </div>
    </main>

    <Footer />
  </body>
</html>
