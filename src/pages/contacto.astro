---
import '../styles/global.css';
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---
<html lang="es" class="dark:bg-slate-900 dark:text-slate-100">
  <BaseHead title="Contacto — Mi Blog" description="Contáctame" />

  <!-- Font Awesome para iconos -->
  <link
    rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
  />

  <body class="min-h-screen flex flex-col bg-slate-50 text-slate-800 dark:bg-slate-900 dark:text-slate-100">

    <Header current="contacto" />

    <main class="container-custom py-12 flex-1">
      <div class="bg-white p-8 rounded-lg shadow dark:bg-slate-800 dark:text-slate-200">
        <h2 class="text-2xl font-bold mb-4 dark:text-white">Contacto</h2>

        <p class="text-slate-600 mb-6 dark:text-slate-300">
          Si quieres contactarme da clic en alguno de los siguientes enlaces o envíame un correo a:
          <strong class="dark:text-white">marooagc04@gmail.com</strong>
        </p>
            <div class="flex flex-col gap-3 text-lg">
            <a href="mailto:marooagc04@gmail.com" class="flex items-center gap-2 hover:text-primary">
                <i class="fa-solid fa-envelope"></i>
                Enviar correo
            </a>

            <a href="https://www.facebook.com/share/1BtLCoK84K/" target="_blank" class="flex items-center gap-2 hover:text-primary">
                <i class="fa-brands fa-facebook"></i>
                Facebook
            </a>

            <a href="https://wa.me/7122294682" target="_blank" class="flex items-center gap-2 hover:text-primary">
                <i class="fa-brands fa-whatsapp"></i>
                WhatsApp
            </a>

            <a href="https://www.instagram.com/marcogarcia906?igsh=MWo2czdwMnYyYnhrZg==" target="_blank" class="flex items-center gap-2 hover:text-primary">
                <i class="fa-brands fa-instagram"></i>
                Instagram
            </a>
            </div>
        </div>
        <!-- Fin sección enlaces -->
      </div>
    </main>

    <Footer />
  </body>
</html>
